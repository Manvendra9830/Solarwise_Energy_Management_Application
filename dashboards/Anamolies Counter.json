          "format": "table",
          "hide": false,
          "range": true,
          "rawSql": "WITH cost_statistics AS (\r\n    SELECT\r\n        time,\r\n        instantaneous_actual_cost_inr,\r\n        AVG(instantaneous_actual_cost_inr) OVER () AS moving_avg,\r\n        STDDEV(instantaneous_actual_cost_inr) OVER () AS moving_stddev\r\n    FROM\r\n        solar_data9\r\n    WHERE\r\n        time <= CURRENT_TIMESTAMP\r\n),\r\nanomalies AS (\r\n    SELECT\r\n        time,\r\n        instantaneous_actual_cost_inr,\r\n        moving_avg,\r\n        moving_stddev,\r\n        CASE\r\n            WHEN ABS(instantaneous_actual_cost_inr - moving_avg) > 2 * moving_stddev THEN 'Anomaly'\r\n            ELSE 'Normal'\r\n        END AS anomaly_flag\r\n    FROM\r\n        cost_statistics\r\n)\r\nSELECT\r\n    COUNT(*) AS anomaly_count\r\nFROM\r\n    anomalies\r\nWHERE\r\n    anomaly_flag = 'Anomaly';",
          "refId": "A"
        }
